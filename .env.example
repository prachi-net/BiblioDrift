# BiblioDrift LLM Service Configuration
# Copy this file to .env and add your API keys

# LLM Configuration - Choose your preferred provider
PREFERRED_LLM=groq
# Options: openai, groq, gemini

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=150

# Groq Configuration (Recommended - Fast & Free)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=openai/gpt-oss-20b
# Options: openai/gpt-oss-20b, llama-3.1-8b-instant, mixtral-8x7b-32768
GROQ_TEMPERATURE=0.7
GROQ_MAX_TOKENS=150

# Google Gemini Configuration  
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
# Options: gemini-1.5-flash, gemini-1.5-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=150

# LLM Token Limits (Production Tuning)
DEFAULT_MAX_TOKENS=150
BOOK_NOTE_MAX_TOKENS=100
RECOMMENDATION_MAX_TOKENS=150
TEST_MAX_TOKENS=10

# LLM Retry Configuration
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0

# GoodReads Scraping Configuration (Optional)
GOODREADS_MIN_DELAY=2.0
GOODREADS_MAX_DELAY=5.0
GOODREADS_MAX_RETRIES=3
GOODREADS_TIMEOUT=30
MIN_REVIEW_LENGTH=50

# Mood Analysis Configuration (Optional)
MIN_REVIEWS_FOR_ANALYSIS=3
CONFIDENCE_THRESHOLD=0.1
MIN_WORD_FREQUENCY=2
MAX_MOOD_CATEGORIES=5

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# Prompt Customization (Advanced)
BOOK_NOTE_MAX_WORDS=50
RECOMMENDATION_MAX_WORDS=100

# Custom prompt templates (optional - uses defaults if not set)
# BOOK_NOTE_PROMPT_TEMPLATE=your_custom_template_here
# RECOMMENDATION_PROMPT_TEMPLATE=your_custom_template_here


# Database Configuration
# For local development (SQLite):
DATABASE_URL=sqlite:///biblio.db

# For PostgreSQL (Uncomment and replace with your credentials if using Postgres):
# DATABASE_URL=postgresql://username:password@localhost:5432/biblio_db

# Flask Settings
FLASK_DEBUG=True
PORT=5000

# Purchase Links Configuration (NEW)
# Google Books API (recommended for best results)
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Amazon Affiliate Program (optional)
AMAZON_AFFILIATE_TAG=your_amazon_affiliate_tag
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_REGION=US

# Flipkart Affiliate Program (optional - India specific)
FLIPKART_AFFILIATE_ID=your_flipkart_affiliate_id
FLIPKART_AFFILIATE_TOKEN=your_flipkart_token

# Barnes & Noble Affiliate (optional)
BARNES_NOBLE_AFFILIATE_ID=your_barnes_noble_affiliate_id

# Purchase Links Performance Settings
PURCHASE_LINKS_CACHE_TTL=3600
PURCHASE_LINKS_TIMEOUT=10
PURCHASE_LINKS_MAX_RETRIES=3
PURCHASE_LINKS_RETRY_DELAY=1.0
PURCHASE_LINKS_MAX_CONCURRENT=4
PURCHASE_LINKS_LOG_LEVEL=INFO
